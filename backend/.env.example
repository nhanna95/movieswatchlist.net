# TMDb API Configuration
TMDB_API_KEY=your_tmdb_api_key_here

# Database Configuration
# For local development (SQLite):
DATABASE_URL=sqlite:///./watchlist.db

# For production (PostgreSQL on Railway):
# DATABASE_URL=postgresql://user:password@host:port/dbname

# CORS Configuration (required for production)
# Set this on Railway to your Vercel frontend URL so the browser allows API requests.
# Example: CORS_ORIGINS=https://movieswatchlist-net.vercel.app
# Multiple origins: CORS_ORIGINS=https://movieswatchlist-net.vercel.app,https://www.yourdomain.com
CORS_ORIGINS=

# JWT Authentication Configuration
# IMPORTANT: Generate a secure secret key for production!
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=your_secure_secret_key_here

# JWT Algorithm (default: HS256)
JWT_ALGORITHM=HS256

# JWT Token Expiration in hours (default: 24)
JWT_EXPIRATION_HOURS=24
